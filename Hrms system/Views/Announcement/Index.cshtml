@model IEnumerable<Hrms_system.Models.Announcement>

@{
    ViewData["Title"] = "Announcements";
    Layout = ViewData["Layout"] as string ?? "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Company Announcements</h2>
        @if (User.IsInRole("Admin") || User.IsInRole("HR"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Announcement
            </a>
        }
    </div>

    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-8 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="me-3">
                                <!-- Placeholder for profile picture/icon -->
                                <i class="fas fa-building fa-2x text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-0">@item.Company.CompanyName</h6>
                                <small class="text-muted">@item.CreatedDate.ToString("MMM dd, yyyy hh:mm tt")</small>
                            </div>
                        </div>

                        <h4 class="card-title mb-3">@item.Title</h4>
                        <p class="card-text lead">@item.Content</p>

                        @if (!string.IsNullOrEmpty(item.Department))
                        {
                            <p class="text-muted small mt-2">Department: @item.Department</p>
                        }

                        <hr class="my-3" />

            
                    </div>
                    @if (User.IsInRole("Admin") || User.IsInRole("HR"))
                    {
                        <div class="card-footer bg-light">
                            <div class="d-flex justify-content-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-2">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this announcement?')">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>