@{
    ViewData["Title"] = "Reports";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">Reports</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
            <button type="button" class="btn btn-sm btn-outline-secondary">Print</button>
        </div>
        <button type="button" class="btn btn-sm btn-admin">
            <i class="fas fa-cog me-1"></i> Configure
        </button>
    </div>
</div>

<!-- Report Cards -->
<div class="row mb-4">
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="bg-primary bg-opacity-10 p-3 rounded-circle d-inline-block mb-3">
                    <i class="fas fa-users text-primary fs-3"></i>
                </div>
                <h5>Employee Directory</h5>
                <p class="text-muted">Complete list of all employees with contact details</p>
                <button class="btn btn-outline-primary">Generate Report</button>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="bg-success bg-opacity-10 p-3 rounded-circle d-inline-block mb-3">
                    <i class="fas fa-calendar-check text-success fs-3"></i>
                </div>
                <h5>Attendance Summary</h5>
                <p class="text-muted">Monthly attendance report with late arrivals and absences</p>
                <button class="btn btn-outline-success">Generate Report</button>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="bg-info bg-opacity-10 p-3 rounded-circle d-inline-block mb-3">
                    <i class="fas fa-file-invoice-dollar text-info fs-3"></i>
                </div>
                <h5>Payroll Summary</h5>
                <p class="text-muted">Detailed payroll report for any selected period</p>
                <button class="btn btn-outline-info">Generate Report</button>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="bg-warning bg-opacity-10 p-3 rounded-circle d-inline-block mb-3">
                    <i class="fas fa-umbrella-beach text-warning fs-3"></i>
                </div>
                <h5>Leave Balance</h5>
                <p class="text-muted">Current leave balances for all employees</p>
                <button class="btn btn-outline-warning">Generate Report</button>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="bg-danger bg-opacity-10 p-3 rounded-circle d-inline-block mb-3">
                    <i class="fas fa-chart-pie text-danger fs-3"></i>
                </div>
                <h5>Department Analysis</h5>
                <p class="text-muted">Comparative analysis by department</p>
                <button class="btn btn-outline-danger">Generate Report</button>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="bg-secondary bg-opacity-10 p-3 rounded-circle d-inline-block mb-3">
                    <i class="fas fa-file-export text-secondary fs-3"></i>
                </div>
                <h5>Custom Report</h5>
                <p class="text-muted">Create your own report with custom parameters</p>
                <button class="btn btn-outline-secondary">Create Report</button>
            </div>
        </div>
    </div>
</div>

<!-- Recent Generated Reports -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Recently Generated Reports</h5>
        <a href="#" class="btn btn-sm btn-outline-primary">View All</a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-admin">
                <thead>
                    <tr>
                        <th>Report Name</th>
                        <th>Generated By</th>
                        <th>Date</th>
                        <th>Format</th>
                        <th>Size</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>June 2023 Payroll Summary</td>
                        <td>Admin User</td>
                        <td>28 Jun 2023</td>
                        <td>PDF</td>
                        <td>1.2 MB</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-download"></i> Download
                            </button>
                        </td>
                    </tr>
                    <!-- More rows... -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.table-admin').DataTable({
                responsive: true,
                dom: '<"top"f>rt<"bottom"lip><"clear">',
                pageLength: 10
            });
        });
    </script>
}