@model IEnumerable<LeaveType>

@{
    Layout = "_AdminLayout";
}

<div class="card">

    <div class="card-header">
        <h3 class="card-title">Leave Types</h3>
        <div class="card-tools">
            <a asp-action="CreateLeaveType" class="btn btn-primary">Create New</a>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Leaves Allowed</th>
                    <th>Carry Forward</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.LeavesAllowedPerYear</td>
                        <td>@(item.CarryForwardEnabled ? "Yes" : "No")</td>
                        <td>
                            <a asp-action="EditLeaveType" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                            <form asp-action="DeleteLeaveType" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>