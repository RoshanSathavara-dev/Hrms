@model AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <h1 class="h2">Dashboard Overview</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
            <button type="button" class="btn btn-sm btn-outline-secondary">Print</button>
        </div>
        <button type="button" class="btn btn-sm btn-admin">
            <i class="fas fa-cog me-1"></i> Settings
        </button>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-lg-6 mb-4">
        <div class="card border-start border-primary border-4 h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Total Employees</h6>
                        <h3 class="mb-0">@ViewBag.TotalEmployees</h3>
                    </div>
                    <div class="bg-primary bg-opacity-10 p-3 rounded">
                        <i class="fas fa-users text-primary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 mb-4">
        <div class="card border-start border-success border-4 h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">On Leave Today</h6>
                        <h3 class="mb-0">@ViewBag.OnLeaveToday</h3>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded">
                        <i class="fas fa-umbrella-beach text-success fs-4"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="Admin/Leave" class="text-decoration-none small">View All</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 mb-4">
        <div class="card border-start border-warning border-4 h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Pending Approvals</h6>
                        <h3 class="mb-0">@ViewBag.PendingRequests</h3>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded">
                        <i class="fas fa-tasks text-warning fs-4"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="Admin/Leave" class="text-decoration-none small">View All</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 mb-4">
        <div class="card border-start border-info border-4 h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">On Break Now</h6>
                        <h3 class="mb-0">@ViewBag.OnBreakNow</h3>
                    </div>
                    <div class="bg-info bg-opacity-10 p-3 rounded">
                        <i class="fas fa-coffee text-info fs-4"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="Admin/Attendance" class="text-decoration-none small">View All</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts and Recent Activity -->
<div class="row">
    <!-- Attendance Chart -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Monthly Attendance Overview</h5>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown">
                        This Month
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">This Month</a></li>
                        <li><a class="dropdown-item" href="#">Last Month</a></li>
                        <li><a class="dropdown-item" href="#">This Quarter</a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <canvas id="attendanceChart" height="250"></canvas>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body p-2">
                <div class="list-group list-group-flush">
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-user-plus me-2 text-primary"></i> Add New Employee</span>
                        <i class="fas fa-chevron-right text-muted"></i>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-file-import me-2 text-success"></i> Process Payroll</span>
                        <i class="fas fa-chevron-right text-muted"></i>
                    </a>
                    <a href="Admin/Attendance" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-calendar-check me-2 text-info"></i> Approve Leave Requests</span>
                        <i class="fas fa-chevron-right text-muted"></i>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-file-export me-2 text-warning"></i> Generate Reports</span>
                        <i class="fas fa-chevron-right text-muted"></i>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-bullhorn me-2 text-danger"></i> Send Announcement</span>
                        <i class="fas fa-chevron-right text-muted"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity and New Employees -->
<div class="row">
    <!-- Recent Activity -->
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-history me-2"></i>Recent System Activity</h5>
                <a href="#" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">

                    @if ((Model.PendingLeaveRequests?.Any() ?? false) || (Model.NewEmployees?.Any() ?? false))

                    {
                    <!-- Loop through Pending Leave Requests -->
                    @foreach (var leave in Model.PendingLeaveRequests)
                    {
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <div class="d-flex align-items-center">
                                    <div class="bg-success bg-opacity-10 p-2 rounded me-3">
                                        <i class="fas fa-user-clock text-success"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">Leave request pending</h6>
                                        <p class="mb-0 small">
                                            @leave.Employee?.FirstName @leave.Employee?.LastName requested @leave.LeaveType
                                        </p>
                                    </div>
                                </div>
                                <small class="text-muted">@leave.CreatedAt.ToShortDateString()</small>
                            </div>
                        </div>
                    }

                    <!-- Loop through New Employees -->
                    @foreach (var emp in Model.NewEmployees)
                    {
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 p-2 rounded me-3">
                                        <i class="fas fa-user-plus text-primary"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">New employee onboarded</h6>
                                        <p class="mb-0 small">@emp.FullName joined as @emp.Position</p>
                                    </div>
                                </div>
                                <small class="text-muted">@emp.JoinDate.ToShortDateString()</small>
                            </div>
                        </div>
                    }
                    }
                    else
                    {
                        <div class="list-group-item">
                            <p class="mb-0 small">There is no recent activity</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>



    <!-- New Employees -->
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-user-friends me-2"></i>Recently Joined</h5>
                <a href="#" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Position</th>
                                <th>Department</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var emp in Model.NewEmployees)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div>@emp.FullName</div>
                                        </div>
                                    </td>
                                   <td>@emp.Position</td>
                                    <td>@emp.Department</td>
                                    <td>
                                        <span class="badge bg-success status-badge">
                                            @(emp.Status ?? "Active")
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        // Destroy old chart if already defined
        let chart;
        const ctx = document.getElementById('attendanceChart').getContext('2d');

        // Initialize Bootstrap tooltips
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        function loadEmployees() {
            $.ajax({
                url: '/Employee/GetAll',
                method: 'GET',
                success: function (data) {
                    $('#totalEmployeesCount').text(data.total);
                },
                error: function (err) {
                    console.error('Error loading employees:', err);
                }
            });
        }

        function loadStats() {
            $.get('/Employee/GetEmployeeStats', function (data) {
                $('#totalEmployeesCount').text(data.totalEmployees);
            });
        }

        $(document).ready(function () {
            loadEmployees();
            loadStats();
            loadAttendanceChart();
        });

        function loadAttendanceChart() {
            fetch('/Admin/GetMonthlyAttendanceData')
                .then(response => response.json())
                .then(data => {
                    const labels = data.labels;
                    const presentData = data.present;
                    const absentData = data.absent;
              

                    // Destroy previous chart instance if exists
                    if (chart) {
                        chart.destroy();
                    }

                    chart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: labels,
                            datasets: [
                                {
                                    label: 'Present',
                                    data: presentData,
                                    backgroundColor: 'rgba(46, 204, 113, 0.7)',
                                    borderColor: 'rgba(46, 204, 113, 1)',
                                    borderWidth: 1
                                },
                                {
                                    label: 'Absent',
                                    data: absentData,
                                    backgroundColor: 'rgba(231, 76, 60, 0.7)',
                                    borderColor: 'rgba(231, 76, 60, 1)',
                                    borderWidth: 1
                                }
                            ]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: {
                                    position: 'top',
                                },
                                tooltip: {
                                    mode: 'index',
                                    intersect: false,
                                },
                                title: {
                                    display: true,
                                    text: 'Monthly Attendance Status'
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: {
                                        callback: function (value) {
                                            return value + '%';
                                        }
                                    }
                                }
                            }
                        }
                    });
                })
                .catch(error => {
                    console.error("Error loading attendance chart:", error);
                });
        }
    </script>
}
